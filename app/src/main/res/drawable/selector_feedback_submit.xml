<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="7dp"/>
            <solid android:color="@color/feedback_submit_selected"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <corners android:radius="7dp"/>
            <solid android:color="@color/feedback_submit_unavailable"/>
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="7dp"/>
            <solid android:color="@color/feedback_submit_unselected"/>
        </shape>
    </item>

</selector>